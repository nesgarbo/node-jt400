{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": false,
        "ignoreDeprecations": "5.0",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "declaration": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceRoot": "./ts-src",
        "outDir": "dist-esm",
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "java",
        "dist"
    ],
    "compileOnSave": true
}