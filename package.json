{
  "name": "node-jt400",
  "author": "Tryggingamiðstöðin <bt.hugbunadargerd@tm.is>",
  "version": "6.0.0",
  "description": "JT400 (IBM Toolbox) for NodeJS",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/tryggingamidstodin/node-jt400.git"
  },
  "files": [
    "dist/esm",
    "dist/cjs",
    "java/lib"
  ],
  "scripts": {
    "format-verify": "prettier --check ./ts-src/**/*.ts",
    "format": "prettier --write ./ts-src/**/*.ts",
    "lint": "eslint ts-src/**/*.ts",
    "test": "mocha -r source-map-support/register --exit dist/esm/unit-test -t 1000",
    "integration-test": "mocha --parallel -r source-map-support/register --exit dist/esm/integration-test -t 10000",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc && tsc-esm-fix --target=dist/esm --ext=.js --dirnameVar=false --filenameVar=false",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "test-compatibility": "echo 'Testing ESM...' && node test-esm.mjs && echo 'Testing CommonJS...' && node test-cjs.cjs",
    "clean": "rm -rf dist/",
    "build-dev": "tsc --watch",
    "test-dev": "mocha dist/esm/unit-test --watch",
    "build-all": "npm run build && npm run build-java",
    "build-java": "ant archive -buildfile ./java",
    "ci": "npm run clean && npm run build && npm run test && npm run integration-test"
  },
  "keywords": [
    "typescript",
    "javascript",
    "as400",
    "IBM",
    "java",
    "db2",
    "jdbc",
    "jt400"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tryggingamidstodin/node-jt400/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "flushwritable": "^1.0.0",
    "java": "^0.16.2",
    "JSONStream": "^1.3.5",
    "oops-error": "^2.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "stream-equal": "^2.0.1",
    "tsc-esm-fix": "^3.1.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format-verify",
      "pre-push": "npm run build && npm run test"
    }
  }
}
